# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Playing Game
GET     /game                       controllers.Application.playGame()
GET     /gui                        controllers.Application.startGUI()
GET     /game/:command              controllers.Application.sendCommand(command:String)

POST    /json/:commandline          controllers.MainController.jsonCommand(commandline:String)
GET     /json                       controllers.MainController.json()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
#GET     /webjars/*file              controllers.WebJarAssets.at(file)